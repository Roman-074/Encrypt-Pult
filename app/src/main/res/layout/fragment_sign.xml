<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.sign.SignFragment">

    <TextView
        android:id="@+id/key_gen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="16dp"

        android:gravity="center"
        android:text="Sign"
        android:textColor="#FF002D"

        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_set_key"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:background="@drawable/button_border_shape"
            android:drawableStart="@drawable/button_start_key"
            android:elevation="6dp"
            android:padding="8dp"
            android:stateListAnimator="@null"
            android:text="set key"
            android:textColor="#FFF"

            android:textStyle="bold"
            android:translationZ="4dp" />

        <Button
            android:id="@+id/btn_refresh_key"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:background="@drawable/button_border_shape"
            android:drawableStart="@drawable/button_generate_key"
            android:elevation="6dp"
            android:padding="8dp"
            android:stateListAnimator="@null"
            android:text="refresh key"
            android:textColor="#FFF"

            android:textStyle="bold"
            android:translationZ="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>